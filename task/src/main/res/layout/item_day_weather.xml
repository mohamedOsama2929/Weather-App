<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutToday"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/x16dp"
    android:layout_marginVertical="8dp"
    android:layout_weight="1"
    android:orientation="vertical"

    >

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_gravity="center"
        tools:src="@drawable/ic_sun_114" />

    <LinearLayout
        android:id="@+id/layoutWeatherInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHumidityNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_regular"

            android:textColor="@color/white_90_opacity"
            android:textSize="12sp"
            tools:text="82.4\u00B0" />

        <TextView
            android:id="@+id/tvSplit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_regular"
            android:text="@string/split"
            android:textColor="@color/white_90_opacity"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvTemperatureNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_regular"

            android:textColor="@color/white_90_opacity"
            android:textSize="12sp"
            tools:text="86\u00B0F" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDateName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/sf_pro_semibold"
        android:gravity="center"
        android:text="@string/today"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:visibility="visible" />

</LinearLayout>



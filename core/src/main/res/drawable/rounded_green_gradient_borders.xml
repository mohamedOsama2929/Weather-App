<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="#4399d8"
                android:startColor="#142544"
                android:type="linear" />
            <corners android:radius="@dimen/x4dp" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#fff" />
            <corners android:radius="@dimen/x4dp" />

        </shape>
    </item>

</layer-list>
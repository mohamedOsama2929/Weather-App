<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:autoMirrored="true">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDark" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item
        android:gravity="center_vertical|end"
        android:right="8dp">
        <layer-list>
            <item
                android:width="12dp"
                android:height="12dp"
                android:bottom="10dp"
                android:gravity="center">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/squash" />
                        <stroke
                            android:width="1dp"
                            android:color="@color/squash" />
                    </shape>
                </rotate>
            </item>
            <item
                android:width="20dp"
                android:height="10dp"
                android:bottom="21dp"
                android:gravity="center">
                <shape android:shape="rectangle">
                    <corners
                        android:topLeftRadius="@dimen/x104dp"
                        android:topRightRadius="@dimen/x104dp" />
                    <solid android:color="@color/colorPrimaryDark" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>